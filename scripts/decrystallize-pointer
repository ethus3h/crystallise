#!/bin/bash
# decrystallize-pointer

# See crystallize for requirements.

# FIXME: I don't think this supports single-file smallify pointers.

[ "$(whoami)" != "root" ] && exec sudo -- "$0" "$@"

#Script should exit if any operation fails.
set -e

shopt -s extglob

if [ "$2" == "--here" ]; then
    decrystallize "$(cat ."$1"-data/identifier)" --here
else
    decrystallize "$(cat ."$1"-data/identifier)" --easy-use
fi
