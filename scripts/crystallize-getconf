#!/usr/bin/env bash
#set -x

# Should work without ember-shared, just in case, so don't set traps or source ember_bash_setup

configFileLocation="/usr/local/etc/crystallize.conf"

if [[ "$1" == "ConfigLocation" ]]; then
    echo "$configFileLocation"
    exit
fi

if [[ "$1" == "crystallizeVersion" ]]; then
    crystallizeVersionA="$(sed '13q;d' "$(which crystallize)")"
    crystallizeVersionB="${crystallizeVersionA%\'*}"
    echo "${crystallizeVersionB##*\'}"
    exit
fi

grep -n ^"$1", "$configFileLocation" | cut -f2 -d: | tail -1 | cut -f2 -d,
