#!/usr/bin/env bash
# shellcheck disable=SC1091
source ember_bash_setup &> /dev/null
#set -x

((EUID)) && exec sudo -- "$0" "$@"
trap 'die "A fatal error was reported on ${BASH_SOURCE[0]} line ${LINENO} in $(pwd) at $(emdate)."' ERR

# Will back up the Ember Library by default.
# Can optionally add additional things to back up: put a file for each other sreg repo to back up in [ConfigDir]/.cbb.sreg/, a list of Crystal IDs to back up in [ConfigDir]/.cbb.crystals, a list of other IA identifiers to back up in [ConfigDir]/.cbb.idents, and a list of other git repositories to back up in [ConfigDir]/.cbb.repos.

backupLocation="crystallize-getconf BackupLocation"

mkdir -p "$backupLocation"

cd "$backupLocation"
touch ".cbb.isBackupDir"

cbbConfigDir="$(crystallize-getconf ConfigDir)"
mkdir -p "$cbbConfigDir"/.cbb.sreg
touch "$cbbConfigDir"/.cbb.sreg/.keep
touch "$cbbConfigDir"/.cbb.crystals
touch "$cbbConfigDir"/.cbb.idents
touch "$cbbConfigDir"/.cbb.repos

# Build backup indices (this won't finish building the sreg/crystal indices because they need the git repos cloned to make them)
mkdir -p ".cbb.idx/sreg-core"
rm -r ".cbb.idx/sreg-extra"
rsync -a --checksum "$cbbConfigDir"/.cbb.sreg ".cbb.idx/sreg-extra"
rsync -a --checksum "$cbbConfigDir"/.cbb.crystals ".cbb.idx/crystals"
rsync -a --checksum "$cbbConfigDir"/.cbb.idents ".cbb.idx/idents"
rsync -a --checksum "$cbbConfigDir"/.cbb.repos ".cbb.idx/repos"
echo "${EmberLibrary:?}" >  ".cbb.idx/sreg-core/EmberLibrary"
echo $'\n'"https://github.com/ethus3h/ember-meta.git" >>  ".cbb.idx/sreg-core/EmberLibrary"

# Take care of git now
(
    mkdir git
    cd git
    cbbRepos="$(<.cbb.idx/repos)"
    while read -r repo; do
        git clone --recursive "$repo"
    done <<< "$cbbRepos"
) || die

# We have the git repos now, so it's time to poke through them and find any missing 
