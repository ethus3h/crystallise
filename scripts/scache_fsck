#!/bin/bash
source "$(which ember_bash_setup)" &> /dev/null

# Verify that all entries in the stream database can be read correctly

[ "$(whoami)" != "root" ] && exec sudo -- "$0" "$@"
trap 'error-die "A fatal error was reported on ${BASH_SOURCE} line ${LINENO}."' ERR

crystalWorkdir="$(crystallize-getconf 'WorkDirectory')"
fsckId="scache_fsck-$(date +%Y-%m-%d-%H-%M-%S-%N)-$(xxd -pu <<< "$(date +%z)")"
mkdir -p "$crystalWorkdir/$fsckId"
fsckStatusFile="$crystalWorkdir/$fsckId/.scache_fsck.status"
echo "$(find "$1" -type f -printf '.' | wc -c)" > "$fsckStatusFile"
dbDir=/Ember\ Library/Futuramerlin\ Projects/Data/Stream\ Registry
find "$dbDir" -type f -not -path "$dbDir/Failed Fsck/*" -not -path "$dbDir/LocalStore/*" -not -path "$dbDir/Packs/*" -exec scache_verify_entry 5 {} "$fsckStatusFile" \;
